
@{
    ViewBag.Title = "Movies";
}

<div ng-app="movieModule" id="body">
    <div ng-controller="movieCtrl">
        <h2>&nbsp;</h2>
        <div class="panel panel-default">
            <!-- Default panel contents -->
            <div class="panel-heading"><h3>Movies Data</h3></div>
            <!--<div class="panel-body">
                <p>This table is getting data from WebApi using AngularJS. <strong>Total number of Movies are <span ng-bind="total()" class="badge">4</span>.</strong></p>
            </div>-->

            <!-- Table -->

            <table class="table table-striped" ng-cloak>
                <thead>
                    <tr>
                        <th style="display: none;">ID</th>
                        <th>Name</th>
                        <th>YearOfRelease</th>
                        <th>Producers/Actors</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="items in Movie">
                        <td hidden="hidden">{{items.ID}}</td>
                        <td>{{items.Name}}</td>
                        <td>{{items.Year}}</td>
                        <td>
                            <input name="Movies.ProducersActors[{{$index}}].ID"
                                   value="{{$index}}"
                                   type="hidden" />
                            <input name="Movies.ProducersActors[{{$index}}].Name"
                                   value="{{ProducersActors.Name}}"
                                   type="text"
                                   class="form-control" />
                        </td>

                        <td>
                            <button class="btn btn-success" ng-model="$scope.Movie"
                                    ng-click="edit(moviesData[$index])">
                                Edit
                            </button>
                        </td>
                        <td>
                            <button class="btn btn-danger" ng-click="delete($index)">Delete</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="panel panel-default" ng-hide="Movie.ID != '' ">
            <div class="panel-heading"><h3>Add New Movie</h3></div>
            <div class="panel-body">

                <div class="form-horizontal">

                    <div class="form-group" hidden="hidden">
                        <label class="control-label col-md-2" for="ID">ID</label>
                        <div class="col-md-10">
                            <input type="text" class="form-control" data-ng-model="Movie.ID" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2" for="Name">Name</label>
                        <div class="col-md-10">
                            <input type="text" class="form-control" data-ng-model="Movie.Name" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2" for="Year">Year Of Release</label>
                        <div class="col-md-10">
                            <input type="text" class="form-control" data-ng-model="Movie.YearOfRelease" />
                        </div>
                    </div>

                    <div class="col-md-6 form-group">
                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Producer/Actor</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="ProducersActors in Movies.ProducersActors">
                                    <td>
                                        <input name="Movies.ProducersActors[{{$index}}].ID"
                                               value="{{$index}}"
                                               type="hidden" />
                                        <input name="Movies.ProducersActors[{{$index}}].Name"
                                               value="{{ProducersActors.Name}}"
                                               type="text"
                                               class="form-control" />
                                    </td>
                                   
                                    <td>
                                        <a class="btn btn-danger" data-ng-click="removeNumber($index)">
                                            <i class="glyphicon glyphicon-remove"></i>
                                        </a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <input ng-model="NewName"
                                               type="text"
                                               class="form-control" />
                                    </td>
                                    
                                    <td>
                                        <a class="btn btn-default" data-ng-click="addNewNumber()">
                                            <i class="glyphicon glyphicon-ok"></i>
                                        </a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2"></label>
                        <div class="col-md-10">
                            <button class="btn btn-lg btn-success" data-ng-click="save()">Save</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div class="panel panel-default" ng-show="Movie.ID != '' ">
            <div class="panel-heading"><h3>Update Movie</h3></div>
            <div class="panel-body">

                <div class="form-horizontal">

                    <div class="form-group" hidden="hidden">
                        <label class="control-label col-md-2" for="ID">ID</label>
                        <div class="col-md-10">
                            <input type="text" class="form-control" data-ng-model="Movie.ID" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2" for="Name">Name</label>
                        <div class="col-md-10">
                            <input type="text" class="form-control" data-ng-model="Movie.Name" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2" for="Details">Year Of Release</label>
                        <div class="col-md-10">
                            <input type="text" class="form-control" data-ng-model="Movie.YearOfRelease" />
                        </div>
                    </div>


                    <div class="form-group col-md-6">
                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Producer/Actor</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="ProducersActors in Movies.ProducersActors">
                                    <td>
                                        <input name="Movies.ProducersActors[{{$index}}].ID"
                                               value="{{$index}}"
                                               type="hidden" />
                                        <input name="Movies.ProducersActors[{{$index}}].Name"
                                               value="{{ProducersActors.Name}}"
                                               type="text"
                                               class="form-control" />
                                    </td>
                                   
                                    <td>
                                        <a class="btn btn-danger" data-ng-click="removeNumber($index)">
                                            <i class="glyphicon glyphicon-remove"></i>
                                        </a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <input ng-model="NewName"
                                               type="text"
                                               class="form-control" />
                                    </td>
                                 
                                    <td>
                                        <a class="btn btn-default" data-ng-click="addNewNumber()">
                                            <i class="glyphicon glyphicon-ok"></i>
                                        </a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <br />
                    <div class="form-group col-md-8">
                        <label class="control-label col-md-2"></label>
                        <div class="col-md-4">
                            <button class="btn btn-lg btn-success " data-ng-click="update()">Update</button>
                        </div>
                        <div class="col-md-4">
                            <button class="btn btn-lg btn-success " data-ng-click="cancel()">Cancel</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>


@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/myAngularJS")
    <script src="~/Scripts/Custom/Movies.js"></script>


}
